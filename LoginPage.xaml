<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GuideMoi.Pages.LoginPage"  
    BackgroundColor="#FFFFFF"
    Title="Connexion">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30"
            Spacing="20"
            VerticalOptions="CenterAndExpand">

            <!-- Logo / Titre -->
            <Label 
                Text="GUIDE-MOI" 
                FontAttributes="Bold" 
                FontSize="28"
                HorizontalOptions="Center"
                TextColor="#007F4E" />

            <Label 
                Text="Bienvenue sur Guide-moi"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="#444" />

            <!-- Champ Email -->
            <Entry 
                Placeholder="Nom ou Email"
                HeightRequest="50"
                BackgroundColor="#E6F4EA"
                TextColor="Black"
                PlaceholderColor="#777"
                Margin="0,10,0,0"
                Keyboard="Email" />

            <!-- Champ Mot de passe -->
            <Entry 
                Placeholder="Mot de passe"
                IsPassword="True"
                HeightRequest="50"
                BackgroundColor="#E6F4EA"
                TextColor="Black"
                PlaceholderColor="#777" />

            <!-- Bouton Connecter -->
            <Button 
                Text="Connecter"
                BackgroundColor="#007F4E"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50" />

            <!-- Lien mot de passe oublié -->
            <Label 
                Text="Mot de passe oublié ?"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="#007F4E" />

            <!-- Section S’inscrire -->
            <HorizontalStackLayout 
                HorizontalOptions="Center">
                <Label Text="Pas de compte ?" 
                       FontSize="14"
                       TextColor="#444" />
                <Label Text="S’inscrire" 
                       FontAttributes="Bold"
                       TextColor="#007F4E"
                       Margin="5,0,0,0" />
            </HorizontalStackLayout>

            <!-- Bouton invité -->
            <Button 
                Text="Continuer en tant qu’invité"
                BackgroundColor="#CDEAD6"
                TextColor="#007F4E"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
